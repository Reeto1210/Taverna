<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:id="@+id/TooolbarForChat"
    android:layout_width="match_parent"
    android:layout_height="@dimen/materialize_toolbar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:background="@color/primary"
    >

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/singleChatFriend"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/bomjara"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/singleChatTVname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Дядя Фёдор"
        android:textColor="@color/accent"
        android:textSize="14sp"

        app:layout_constraintStart_toEndOf="@+id/singleChatFriend"
        app:layout_constraintTop_toTopOf="@+id/singleChatFriend" />

    <TextView
        android:id="@+id/singleChatTVStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="в сети"

        android:textSize="12dp"

        app:layout_constraintStart_toEndOf="@+id/singleChatFriend"
        app:layout_constraintTop_toBottomOf="@+id/singleChatTVname" />


</androidx.constraintlayout.widget.ConstraintLayout>
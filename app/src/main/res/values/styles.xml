<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="MaterialDrawerTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupTheme">@style/ActionMenu</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected
        </item> <!-- Material 2 defines 12% alpha, primary color -->
        <item name="material_drawer_selected_legacy">@color/material_drawer_selected
        </item> <!-- Defines the color if legacy style (Material 1, is enabled) -->
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
        <item name="material_drawer_header_selection_subtext">@color/material_drawer_dark_header_selection_subtext</item>
        <item name="material_drawer_legacy_style">false
        </item> <!-- Enables legacy Material 1 style -->
    </style>

    <style name="AppThemeDark" parent="MaterialDrawerTheme" />

    <style name="SettingsButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/myripple</item>
    </style>

    <style name="ActionMenu" parent="Theme.AppCompat.Light">
        <item name="background">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/md_black_1000</item>


    </style>
    <style name="FAB" parent="ActionMenu">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="edit_text_standart">
    <item name="android:textCursorDrawable">@drawable/shape_cursor</item>
               <item name="background">@color/material_drawer_dark_primary_icon</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/LeftMargin</item>
        <item name="android:layout_marginTop">@dimen/LeftMargin</item>
        <item name="android:padding">@dimen/standartPadding</item>
        <item name="android:textSize">@dimen/NormalText</item>
    <item name="android:textColorHint">@color/material_drawer_secondary_text</item>
    </style>

</resources>